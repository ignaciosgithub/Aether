// Challenge: Check if a number is even
// Use bitwise AND to check if the least significant bit is 0

pub func is_even(n: i64) -> i64 {
    return if ((n & 1) == 0) { 1 } else { 0 };
}

pub func main() -> i32 {
    println("Is 42 even?");
    println(is_even(42));
    println("Is 17 even?");
    println(is_even(17));
    return 0;
}
