// Challenge: Cube Numbers
// Calculate n cubed using recursion

func cube(n: i64) -> i64 {
    return if (n == 0) { 0 } else { cube(n - 1) + 3 * (n - 1) * (n - 1) + 3 * (n - 1) + 1 };
}

pub func main() -> i32 {
    println("cube(3) = 27:");
    println(cube(3));
    println("cube(5) = 125:");
    println(cube(5));
    return 0;
}
