// Challenge: Halve a number
// Use recursion to halve a number (integer division by 2)

func halve(n: i64) -> i64 {
    return if (n < 2) { 0 } else { 1 + halve(n - 2) };
}

pub func main() -> i32 {
    println("halve(10) = 5:");
    println(halve(10));
    println("halve(100) = 50:");
    println(halve(100));
    println("halve(7) = 3:");
    println(halve(7));
    return 0;
}
