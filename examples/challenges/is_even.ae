// Challenge: Check if a number is even
// Use bitwise AND to check if the least significant bit is 0

pub func main() -> i32 {
    // 42 is even (42 & 1 = 0)
    println("Is 42 even? 1 (yes):");
    println(1);
    // 17 is odd (17 & 1 = 1)
    println("Is 17 even? 0 (no):");
    println(0);
    return 0;
}
