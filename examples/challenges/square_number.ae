// Challenge: Square Numbers
// Calculate n squared using recursion (sum of first n odd numbers)

func square(n: i64) -> i64 {
    return if (n == 0) { 0 } else { square(n - 1) + 2 * n - 1 };
}

pub func main() -> i32 {
    println("square(5) = 25:");
    println(square(5));
    println("square(12) = 144:");
    println(square(12));
    return 0;
}
