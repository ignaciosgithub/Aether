// Challenge: Double a number
// Use recursion to double a number

func double(n: i64) -> i64 {
    return if (n == 0) { 0 } else { 2 + double(n - 1) };
}

pub func main() -> i32 {
    println("double(7) = 14:");
    println(double(7));
    println("double(50) = 100:");
    println(double(50));
    return 0;
}
